<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/filterLayout"
        android:scrollbars="none"
        android:visibility="gone"
        android:background="@android:color/white"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true"
                android:id="@+id/rlNone"
                android:onClick="colorEffectFilter">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_cancel_black_24dp"
                    android:id="@+id/ivEffectNone"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None"
                    android:textSize="14sp"
                    android:layout_below="@+id/ivEffectNone"
                    android:layout_centerHorizontal="true"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlAua"
                android:padding="10dp"
                android:onClick="colorEffectFilter"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_invert_colors_black_24dp"
                    android:id="@+id/ivEffectAqua"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aqua"
                    android:textSize="14sp"
                    android:layout_below="@+id/ivEffectAqua"
                    android:textColor="@android:color/black"/>


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlMono"
                android:padding="10dp"
                android:onClick="colorEffectFilter"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_monochrome_photos_black_24dp"
                    android:id="@+id/ivEffectMono"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mono"
                    android:textSize="14sp"
                    android:layout_below="@+id/ivEffectMono"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rlNegative"
                    android:padding="10dp"
                    android:onClick="colorEffectFilter"
                    android:clickable="true"
                    >
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_shuffle_black_24dp"
                        android:id="@+id/ivEffectNegative"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Negative"
                        android:textSize="14sp"
                        android:layout_below="@+id/ivEffectNegative"
                        android:textColor="@android:color/black"/>
                </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlPOSTERIZE"
                android:padding="10dp"
                android:onClick="colorEffectFilter"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_texture_black_24dp"
                    android:id="@+id/ivEffectPOSTERIZE"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Posterize"
                    android:textSize="14sp"
                    android:layout_below="@+id/ivEffectPOSTERIZE"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rlsepia"
                android:padding="10dp"
                android:onClick="colorEffectFilter"
                android:clickable="true"
                >
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_wb_incandescent_black_24dp"
                    android:id="@+id/ivEffectrlsepia"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sepia"
                    android:textSize="14sp"
                    android:layout_below="@+id/ivEffectrlsepia"
                    android:textColor="@android:color/black"/>
            </RelativeLayout>





        </LinearLayout>














    </HorizontalScrollView>
</LinearLayout>










